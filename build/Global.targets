<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<BranchRootDirectory>$(MSBuildThisFileDirectory)..</BranchRootDirectory>
		<BranchPackagesDirectory>$(BranchRootDirectory)\packages</BranchPackagesDirectory>
		<BuildSettingsDirectory>$(BranchRootDirectory)\build</BuildSettingsDirectory>

		<IsTestProject Condition="$(MSBuildProjectFile.Contains('.Test.'))">True</IsTestProject>
		<CheckForOverflowUnderflow Condition="'$(CheckForOverflowUnderflow)' == ''">true</CheckForOverflowUnderflow>
		<ErrorReport>prompt</ErrorReport>
		<WarningLevel>4</WarningLevel>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<RunCodeAnalysis>true</RunCodeAnalysis>
	</PropertyGroup>

	<PropertyGroup  Condition="'$(IsTestProject)' != 'True'">
		<CodeAnalysisRuleSet>$(BuildSettingsDirectory)\CodeAnalysis.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<PropertyGroup  Condition="'$(IsTestProject)' == 'True'">
		<CodeAnalysisRuleSet>$(BuildSettingsDirectory)\CodeAnalysis.Test.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<Import Project="$(BranchRootDirectory)\packages\WTG.Analyzers\build\WTG.Analyzers.props"/>
</Project>
